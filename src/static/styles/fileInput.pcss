@import url("./consts.pcss");

.file__input {
    position: relative;
	display: flex;
    flex-direction: column;
    margin-top: 43px;
    margin-bottom: 45px;    
}

.file__input .file__input-field[type="file"] {
	position: absolute;
	z-index: -1;
	opacity: 0;
	display: block;
	width: 0;
	height: 0;
}
 
.file__input-link {
    position: relative;
	display: inline-block;
	cursor: pointer;
	font-size: 12px;
	vertical-align: middle;
    color:$primary;
	text-align: center;	
}
